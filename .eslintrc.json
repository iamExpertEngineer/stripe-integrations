{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
		"indent": [
			"error",
			4
		],
		"no-template-curly-in-string": [
			"off"
		],
		"no-useless-escape": [
			"off"
		],
		"eqeqeq": [
			"off"
		]
	}
}
